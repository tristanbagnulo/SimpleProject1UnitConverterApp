<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolumeConversionActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="Enter Volume into one of the following fields"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Input Volume"
        android:textColor="#837E7E"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <TextView
        android:id="@+id/textViewSelectUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/editTextTextPersonName"
        android:layout_alignBottom="@+id/editTextTextPersonName"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="@+id/editTextTextPersonName"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/editTextTextPersonName"
        android:layout_toRightOf="@+id/editTextTextPersonName"
        android:text="Select \n unit"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/spinner"
        style="@style/spinner_style"
        android:layout_alignTop="@+id/textViewSelectUnit"
        android:layout_alignBottom="@+id/textViewSelectUnit"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/textViewSelectUnit"
        android:layout_toRightOf="@+id/textViewSelectUnit" />
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignTop="@+id/textViewSelectUnit"
        android:layout_alignBottom="@+id/textViewSelectUnit"
        android:layout_toEndOf="@+id/editTextSelectUnit"
        android:layout_toRightOf="@+id/editTextSelectUnit"
        app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName"
        app:layout_constraintStart_toEndOf="@+id/editTextTextPersonName" />

    <Button
        android:id="@+id/buttonConvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:layout_below="@+id/editTextTextPersonName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/textViewOutputTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonConvert"
        android:layout_alignStart="@+id/editTextTextPersonName"
        android:layout_alignLeft="@+id/editTextTextPersonName"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="30dp"
        android:text="Result:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewOutPutPane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewOutputTitle"
        android:layout_alignStart="@+id/textViewOutputTitle"
        android:layout_alignLeft="@+id/textViewOutputTitle"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="30dp"
        android:text="<Populate Result>"
        android:textSize="25sp"
        android:textColor="@color/black"/>

</RelativeLayout>